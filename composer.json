{
    "name": "rias/statamic-button-box",
    "type": "statamic-addon",
    "autoload": {
        "psr-4": {
            "Rias\\ButtonBox\\": "src"
        }
    },
    "require":  {
        "statamic/cms": "^3.0",
        "pixelfear/composer-dist-plugin": "^0.1.0"
    },
    "extra": {
        "download-dist": {
            "url": "https://github.com/riasvdv/statamic-button-box/releases/download/{$version}/dist.tar.gz",
            "path": "dist"
        },
        "statamic": {
            "name": "Button Box",
            "description": "Button Box addon"
        },
        "laravel": {
            "providers": [
                "Rias\\ButtonBox\\ServiceProvider"
            ]
        }
    }
}
